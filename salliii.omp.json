{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "palette": {
    "sessionDefault": "#00ff94",
    "sessionRoot": "#ff4848",
    "pathDefault": "#00a6ff",
    "gitDefault": "#735aff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:sessionDefault",
          "foreground_templates": [
            "{{ if .Root }}p:sessionRoot{{ end }}"
          ],
          "template": "{{ .UserName }}@{{ .HostName }}  "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:pathDefault",
          "template": "{{ .Path }}  ",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:gitDefault",
          "template": "{{ .RepoName }} {{ .HEAD }}",
          "properties": {
            "branch_icon": ""
          }
        }
      ]
    }
  ]
}