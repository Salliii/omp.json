{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "palette": {
    "sessionDefault": "#f14545",
    "sessionRoot": "#00ff00",
    "sessionSSH": "#0000ff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:sessionDefault",
          "foreground_templates": [
            "{{ if .Root }}p:sessionRoot{{ end }}",
            "{{ if .SSHSession }}p:sessionSSH{{ end }}"
          ],
          "template": "{{ if .SSHSession }}SSH:{{ end }}{{ .UserName }}@{{ .HostName }}"
        }
      ]
    }
  ]
}